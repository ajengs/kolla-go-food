<p id="notice"><%= notice %></p>

<h1>Drinks</h1>

<table>
  <% @drinks.each do |drink| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(drink.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= drink.name %></dt>
          <dd><%= truncate(strip_tags(drink.description), length:80) %></dd>
          <dd><%= number_to_currency(drink.price, unit: "Rp ", delimiter: ".", separator: ",") %></dd>
          <dd><span class="tags"><%= drink.category.try(:name) %></span></dd>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to 'Show', drink %><br/>
        <%= link_to 'Edit', edit_drink_path(drink) %><br/>
        <%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br>

