<p id="notice"><%= notice %></p>

<h1>Vouchers</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Discount</th>
    <th>Periode</th>
    <th>Max Amount</th>
    <th></th>
  </tr>
  <% @vouchers.each do |voucher| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td><%= voucher.code %></td>
      <td>
        <dl>
          <dd><%= voucher.amount %></dd>
          <dd><%= voucher.unit %></dd>
        </dl>
      </td>
      <td>
        <dl>
          <dd><%= voucher.valid_from %></dd>
          <dd><%= voucher.valid_through %></dd>
        </dl>
      </td>
      <td><%= voucher.max_amount %></td>
      <td class="list_actions">
        <%= link_to 'Show', voucher %>
        <%= link_to 'Edit', edit_voucher_path(voucher) %>
        <%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Voucher', new_voucher_path %>
