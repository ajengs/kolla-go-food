<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<h2>Search</h2>
<%= render template: 'foods/search' %>
<table>
  <% @foods.each do |food| %>
    <div class='entry row'>
      <div class="col-md-4">
        <%= image_tag(food.image_url) %>
        <h3><%= link_to food.name, food_path(food) %></h3>
        <%= sanitize(food.description) %>
        <div class='price_line'>
          <span class="price">
            <%= number_to_currency(food.price, unit: "Rp ", delimiter: ".", separator: ",") %>
          </span>
        </div>

        <div class="cats_line">
          <span class="cats"><%= food.category.try(:name) %></span>
        </div>
        
        <div class="cats_line">
          <% food.tags.each do |tag| %>
            <span class="cats"><%= tag.name %></span>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="list_actions">
          <%= link_to 'Show', food %><br/>
          <%= link_to 'Edit', edit_food_path(food) %><br/>
          <%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>
</table>

